{
  "name": "@vladmandic/monitor",
  "version": "0.0.1",
  "description": "Resource Monitor",
  "sideEffects": false,
  "main": "src/main.js",
  "author": "Vladimir Mandic <mandic00@live.com>",
  "bugs": {
    "url": "https://github.com/vladmandic/monitor/issues"
  },
  "homepage": "https://github.com/vladmandic/monitor",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vladmandic/monitor.git"
  },
  "scripts": {
    "start": "electron ."
  },
  "build": {
    "appId": "@vladmandic/monitor",
    "win": {
      "target": [
        "portable"
      ],
      "icon": "src/favicon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "installerIcon": "src/favicon.ico",
      "uninstallerIcon": "src/favicon.ico",
      "uninstallDisplayName": "Monitor",
      "license": "LICENSE",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron": "^19.0.0",
    "plotly.js-dist-min": "^2.12.1",
    "systeminformation": "^5.11.15"
  },
  "devDependencies": {
    "electron-builder": "^23.0.3",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0"
  }
}
